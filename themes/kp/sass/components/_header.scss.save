header {
  background: $background-color;
  
    &.l-header {
          background: $background-color;
            }
            
              .l-header-inner {
                  position: relative;
                    }
                    
                      .header-logo-wrapper {
                          position: absolute;
                              right: 15px;
                                  top: 60px;
                                      height: 7rem;
                                          max-width: 7rem;
                                            }
                                            
                                              .header-identity-wrapper {
                                                  background: $background-color;
                                                  //    position: relative;
                                                      margin-bottom: 50px;
                                                        }
                                                        
                                                          .header-site-name-wrapper {
                                                              a {
                                                                    background: $background-color;
                                                                          color: $text-color-bright;
                                                                                font-size: 2.5rem;
                                                                                      line-height: 2.9rem;
                                                                                          }
                                                                                            }
                                                                                              .header-site-slogan {
                                                                                                  font-family: 'Lobster';
                                                                                                      transform: rotate(-15deg);
                                                                                                          background: $background-color;
                                                                                                              color: $text-color-dark;
                                                                                                                  font-size: 2rem;
                                                                                                                      position: absolute;
                                                                                                                          left: 45%;
                                                                                                                              top: 35px;
                                                                                                                                  height: 0;
                                                                                                                                    }
